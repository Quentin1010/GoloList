<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_margin">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/twoLine_list_item_height"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/list_item_edge"
        android:layout_marginRight="@dimen/list_item_edge">

        <TextView
            android:id="@+id/person_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/spacer"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/space_between_items"
            android:layout_marginRight="@dimen/space_between_items"
            tools:text="Quentin Beuvelet" />

        <Space
            android:id="@+id/spacer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

        <TextView
            android:id="@+id/person_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/spacer"
            android:layout_marginRight="@dimen/space_between_items"
            android:layout_toLeftOf="@+id/person_phoneNumber"
            tools:text="Pouet@gmail.com" />

        <TextView
            android:id="@+id/person_phoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/spacer"
            tools:text="5211252126" />
    </RelativeLayout>


</android.support.v7.widget.CardView>